<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatscreen_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chatscreen"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    tools:context=".ui.chatscreen.ChatScreenFragment">

    <TextView
        android:id="@+id/bot_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/chatbot_style"
        android:padding="10dp"
        android:paddingBottom="40dp"
        android:text="Hello welcome, We're excited to share important tax information with you regarding your payment card and third-party network transactions for the year 2021. This document outlines the gross amount of payments received, the number of transactions, and details about your earnings throughout the year"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/chatme_style"
        android:padding="10dp"
        android:text="How many transactions in my 2021 tax file?"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/bot_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/chatbot_style"
        android:padding="10dp"
        android:text="2021 tax file reports 2,427 payment transactions. processed through the payment card/third party network (page1)"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/bot_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/chatbot_style"
        android:padding="10dp"
        android:text="2021 tax file reports 2,427 payment transactions. processed through the payment card/third party network (page1)"
        android:textColor="@color/white" />

</LinearLayout>