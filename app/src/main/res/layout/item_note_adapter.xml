<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/note_adapter"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="6dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#271C2B"
            android:orientation="horizontal"
            android:paddingHorizontal="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="3dp"
                android:layout_weight="3"
                app:cardBackgroundColor="#0000004D"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingHorizontal="5dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/star" />

                    <Space
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/note_adapter_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:paddingTop="2dp"
                        android:text="3/21/2025"
                        android:textColor="#FFFFFF"
                        android:textFontWeight="600" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="3dp"
                android:layout_weight="2"
                app:cardBackgroundColor="#0000004D"
                app:cardCornerRadius="15dp">

                <TextView
                    android:id="@+id/note_adapter_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="2dp"
                    android:text="11: 59 PM"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textFontWeight="600" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="2dp"
                android:layout_marginVertical="3dp"
                android:layout_weight="1"
                android:paddingVertical="2dp"
                app:cardBackgroundColor="#0000004D"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:id="@+id/note_adapter_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/temp1" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/note_adapter_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#39306E"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="5dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/note_adapter_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Hello welcome, We're excited to share important tax information with you regarding your payment card and third-party network transactions for the year 2021. This document outlines the gross amount of payments received, the number of transactions, and details about your earnings throughout the year."
                android:textColor="@color/white">

            </TextView>

            <TextView
                android:id="@+id/note_adapter_topic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="[last updated: 3/21/2025]   [tax information]"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>