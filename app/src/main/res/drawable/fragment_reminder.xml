                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/ivReminderStar2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="Star icon"
                    android:src="@drawable/ic_star"
