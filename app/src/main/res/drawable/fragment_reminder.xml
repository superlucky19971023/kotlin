                    android:layout_height="20dp"
                    android:contentDescription="Star icon"
                    android:src="@drawable/ic_star"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/tvTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="10:00AM - 12:00PM"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/ivReminderStar1"
                    app:layout_constraintStart_toEndOf="@+id/ivReminderStar1"
                    app:layout_constraintTop_toTopOf="@+id/ivReminderStar1" />

                <TextView
                    android:id="@+id/tvDate1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="4dp"
                    android:text="3/19/2025"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvTime1"
                    app:layout_constraintEnd_toStartOf="@+id/ivPattern1"
                    app:layout_constraintTop_toTopOf="@+id/tvTime1" />

                <ImageView
                    android:id="@+id/ivPattern1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="Pattern"
                    android:src="@drawable/night"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvReminderTitle1"
                    android:layout_width="wrap_content"
